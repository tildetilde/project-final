{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", 
  "dist",
  "data", 
  "src/services/seedDb.ts", 
  "src/services/createAdmin.ts"
]
}